#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# Fail fast
set -e

# Config
BIN_DIR="$(dirname "$0")"
BUILD_DIR="$1"
CACHE_DIR="$2"

TOMEE_VERSION="8.0.0"
TOMEE_HOME="${BUILD_DIR}/tomee"
JVM_VERSION="1.8"

JVM_BPACK_URL="http://heroku-jvm-common.s3.amazonaws.com/jvm-buildpack-common.tar.gz"
TOMEE_URL="http://repo1.maven.org/maven2/org/apache/tomee/apache-tomee/${TOMEE_VERSION}/apache-tomee-${TOMEE_VERSION}-plus.tar.gz"
BVAL_CORE_URL="https://repo1.maven.org/maven2/org/apache/bval/bval-core/1.1.2/bval-core-1.1.2.jar"
BVAL_JSR_URL="https://repo1.maven.org/maven2/org/apache/bval/bval-jsr/1.1.2/bval-jsr-1.1.2.jar"
DERBYCLIENT_URL="https://repo1.maven.org/maven2/org/apache/derby/derbyclient/10.12.1.1/derbyclient-10.12.1.1.jar"




# Build JVM
cd "${BUILD_DIR}"
echo -n "-----> Bundling JVM ${JVM_VERSION}..."
curl --silent --location "${JVM_BPACK_URL}" | tar xz
. bin/java
echo "java.runtime.version=${JVM_VERSION}" > "${BUILD_DIR}/system.properties"
logger -p user.notice -t "slugc[$$]" "language_pack_java download_jdk"
LOGGER_FLAGS="${LOGGER_FLAGS} download_jdk"
javaVersion="$(detect_java_version "${BUILD_DIR}")"
echo " DONE"
echo -n "-----> Installing OpenJDK ${javaVersion}..."
install_java "${BUILD_DIR}" "${javaVersion}"
jdk_overlay "${BUILD_DIR}"
echo " DONE"




# Build TomEE server.
cd "${BUILD_DIR}"
echo -n "-----> Bundling TomEE version $TOMEE_VERSION"
curl --silent --location "${TOMEE_URL}" | tar xz
mv -vf "${BUILD_DIR}/apache-tomee-plus-${TOMEE_VERSION}" "${BUILD_DIR}/tomee"
cp -vrf "${BUILD_DIR}/server/"* "${TOMEE_HOME}/"
chmod +x "${TOMEE_HOME}/bin/setenv.sh"
cd "${TOMEE_HOME}/lib"
if [ "${TOMEE_VERSION}" = "8.0.0" ]; then
   rm -vrf "${TOMEE_HOME}/lib/bval-"*
   curl --silent --remote-name --location "${BVAL_CORE_URL}" &
   curl --silent --remote-name --location "${BVAL_JSR_URL}" &
fi
curl --silent --remote-name --location "${DERBYCLIENT_URL}" &
wait
echo " DONE"




# Create admin password
cd "${BUILD_DIR}"
echo "!!! ATTENTION !!! ATTENTION !!! ATTENTION !!!"
echo -n "-----> Admin password is "
pv_random="$(dd if=/dev/urandom count=1 2>/dev/null | md5sum | cut -c 1-6)"
sed -i.bak -e "s/nimda/${pv_random}/" "${TOMEE_HOME}/conf/tomcat-users.xml"
echo "${pv_random}"
echo "!!! ATTENTION !!! ATTENTION !!! ATTENTION !!!"




# Build boot.sh
cd "${BUILD_DIR}"
echo -n "-----> Bundling boot.sh"
cat >>boot.sh <<EOF
#!/usr/bin/env sh

export JAVA_HOME="\${HOME}/.jdk"
export JRE_HOME="\${HOME}/.jdk/jre"
export CATALINA_HOME="\${HOME}/tomee"
export JAVA_OPTS="-Dhttp.port=\${PORT}"

"\${CATALINA_HOME}/bin/catalina.sh" "run"
EOF
chmod +x boot.sh
echo " DONE"




exit 0
